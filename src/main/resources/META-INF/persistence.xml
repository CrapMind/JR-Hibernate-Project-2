<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.2">

    <persistence-unit name="myPersistenceUnit" transaction-type="RESOURCE_LOCAL">

        <properties>

            <!-- Autodetect @Entity-classes -->
        <property name="hibernate.archive.autodetection" value="class"/>
            <!-- JDBC via P6Spy -->
        <property name="jakarta.persistence.jdbc.driver" value="com.p6spy.engine.spy.P6SpyDriver"/>
        <property name="jakarta.persistence.jdbc.url" value="jdbc:p6spy:mysql://localhost:3306/movie"/>
            <!-- Get login/password from environment -->
        <property name="jakarta.persistence.jdbc.user" value="${DB_USER}"/>
        <property name="jakarta.persistence.jdbc.password" value="${DB_PASS}"/>
            <!-- Hibernate settings -->
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
        <property name="hibernate.hbm2ddl.auto" value="validate"/>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>
